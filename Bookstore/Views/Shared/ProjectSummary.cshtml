@{
}

@model Book

    <div class="card card-outline-primary m-1 p-1">

        <div class="bg-light p-1">
            <h3>@Model.Title</h3>
            @*//Bootstrap styling!*@

            <h5>
                <span class="badge bg-success text-white">
                    Price: @Model.Price.ToString("c")
                </span>
                @*This will create a badge that shows the price of the book. This isn't required but I wanted to show it.*@
            </h5>

        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Author: @Model.Author</li>
            <li class="list-group-item">Publisher: @Model.Publisher</li>
            <li class="list-group-item">ISBN: @Model.Isbn</li>
            <li class="list-group-item">Classification: @Model.Classification</li>
            <li class="list-group-item">Category: @Model.Category</li>
            <li class="list-group-item">Page Count: @Model.PageCount</li>
        </ul>
        
        <form method="post" asp-page="/ShoppingCart">

            <input type="hidden" asp-for="@Model.BookId"/>
            <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()"/>

            <span class="card-text">
                <button type="submit" class="btn btn-secondary text-white btn-md float-left p-2 m-2">Add to Cart</button>
                @*Margin creates space outside, padding creates space within*@
            </span>
            @*Add to cart button adds to the list of items that have been added*@

        </form>
    </div>