<table class="table table-sm table-striped table-bordered table-hover">
    @* NEW BOOTSTRAP -- Try to use the table-hover attribute to enable hovering over tables *@

    <thead>
        <tr>
            <th colspan="5" class="text-center">@TableTitle</th>
        </tr>
    </thead>

    <tbody>
        @if (Purchases?.Count() > 0)
        {
            @foreach (Purchase p in Purchases)
            {
                <tr>
                    <td>@p.Name</td>
                    <th>Book</th>
                    <th>Quantity</th>

                    <td>
                        <button class="btn btn-sm btn-danger" @onclick="@(x => PurchaseSelected.InvokeAsync(p.PurchaseId))">
                            @ButtonLabel
                        </button>
                    </td>
                </tr>

                @foreach (CartLineItem cli in p.Lines)
                {
                    <tr>
                        <td colspan="1"></td>
                        <td>@cli.Book.Title</td>
                        <td>@cli.Quantity</td>
                        <td>@((cli.Book.Price * cli.Quantity).ToString("c"))</td>
                    </tr>
                    //Show the book title, quantity, and price for each row
                }
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">No Purchases</td>
            </tr>
        }
    </tbody>
</table>

@code {
    [Parameter]
    public string TableTitle { get; set; } = "Purchases";

    [Parameter]
    public IEnumerable<Purchase> Purchases { get; set; }

    [Parameter]
    public string ButtonLabel { get; set; } = "Shipped";

    [Parameter]
    public EventCallback<int> PurchaseSelected { get; set; }
}